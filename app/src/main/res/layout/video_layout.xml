            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/score_submit"
            android:layout_centerVertical="true"
            android:max="5"
            android:rating="3" />
        <!--android:layout_toRightOf="@+id/score_tv"-->
